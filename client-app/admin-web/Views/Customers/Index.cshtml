@{
    ViewData["Title"] = "Customers";
    ViewData["useDataTable"] = true;
}
<div class="mb-3">
    <a class="btn btn-success" asp-action="create" asp-controller="customers">
        <i class="bi bi-plus-circle"></i>
        Create
    </a>
</div>
<div class="row">
    <table id="tbUsers" class="table table-striped table-bordered table-responsive w-100" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Full Name</th>
                <th>Disabled</th>
                <th>Users</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section PageScripts {
    <script>
        var dtTable;
        $(document).ready(function () {
            dtTable = $("#tbUsers").on('xhr.dt', function (e, settings, json, xhr) {
                return true;
            }).DataTable({
                "serverSide": true,
                "processing": true,
                "filter": true,
                "searching": false,
                "orderMulti": false,
                "pageLength": 15,
                "lengthMenu": [15, 30, 50],
                "ajax": function (data, callback, settings) {
                    $.ajax({
                        url: "@Url.Action("getCustomers")",
                        data: {
                            skip: data.start,
                            limit: data.length
                        },
                        success: (res, textStatus, xhr) => {
                            callback({
                                data: res.list,
                                recordsTotal: res.total,
                                recordsFiltered: res.total
                            });
                        },
                        error: (xhr, status, err) => {
                            alert(`[${xhr.status}] ${xhr.responseJSON.error}`);
                        }
                    });
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                }, {
                    targets: [4,6],
                    searchable: false,
                    orderable: false
                }],
                "columns": [
                    { "data": "id", "autoWidth": true },
                    {
                        "data": "username",
                        "name": "Name",
                        "autoWidth": true,
                        "render": function (data, type, row) {
                            return "<span class='" + (row.disabled ? "text-danger" : "") + "'>" + data + "</span>";
                        }
                    },
                    { "data": "email", "autoWidth": true },
                    { "data": "fullName", "autoWidth": true },
                    {
                        "render": function (data, type, row, meta) { 
                            return row.disabled ? "<div class='text-center fs-3'><i class='bi bi-check'></i></div>" : ""; 
                        }
                    },
                    {
                        data: "userCount",
                        render: function (data, type, row, meta) {
                            return "<div class='text-center text-decoration-underline'><a href='@Url.Action("", "users")/" + row.id + "'>" + data + "</a></div>";
                        }
                    },
                    {
                        data: "createdDateDisplay"
                    },
                    {
                        "render": function (data, type, row, meta) { return '<a class="btn btn-circle btn-info" href="/Customers/Edit/' + row.username + '"><i class="bi bi-pen"></i></a>'; }
                    }
                ]

            });
        });

    </script>
}
