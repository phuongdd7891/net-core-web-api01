<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdminWeb</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    @await Html.PartialAsync("Sections/_Styles")
    @await RenderSectionAsync("PageStyles", required: false)
</head>
<body>
    @await Component.InvokeAsync("Profile")
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @await Html.PartialAsync("Sections/_Sidebar")
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                @await Html.PartialAsync("Sections/_TopNav")
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h5 mb-0 text-gray-800">@ViewData["Title"]</h1>
                    </div>

                    <!-- Content Row -->
                    @RenderBody()
                    <!-- Content Row -->
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    @await Html.PartialAsync("Sections/_Scripts")
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("PageScripts", required: false)
</body>
</html>
