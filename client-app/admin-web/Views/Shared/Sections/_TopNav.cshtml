<!-- Change password Modal-->
<div class="modal fade" id="changePwdModal" tabindex="-1" role="dialog" aria-labelledby="lbChangePwd"
     aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lbChangePwd">Change password</h5>
                <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            @using (Html.AjaxBeginForm(new AjaxOptions
             {
                 HttpMethod = "post",
                 InsertionMode = InsertionMode.Replace,
                 Url = Url.Action("changePassword", "home"),
                 OnBegin = "onSaveBegin",
                 OnSuccess = "onSaveSuccess",
                 OnFailure = "onSaveError",
             }, new { id = "frmChangePwd" }))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label" for="txtCurrentPwd">Current Password</label>
                        <input class="form-control" type="password" id="txtCurrentPwd" name="CurrentPassword" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="txtNewPwd">New Password</label>
                        <input class="form-control" type="password" id="txtNewPwd" name="NewPassword" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        Save
                        <span id="submitting" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-secondary" id="btnCancelChangePwd" data-bs-dismiss="modal">
                        Cancel
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function onSaveError(err) {
        alert(err.responseJSON.error);
        $('#submitting').toggleClass('d-none');
    }

    function onSaveSuccess() {
        $('#submitting').toggleClass('d-none');
        $('#btnCancelChangePwd').click();
        
    }

    function onSaveBegin() {
        $('#submitting').toggleClass('d-none');
    }
</script>