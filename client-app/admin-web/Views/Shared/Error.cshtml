@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h5 class="text-danger">An error occurred while processing your request.</h5>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="border border-danger text-danger bg-light p-3 mb-3">
        @Model.Message
    </div>
}

<p>
    <a href="javascript: history.go(-1);">
        <i class="bi bi-rewind pr-2"></i>Back
    </a>
</p>