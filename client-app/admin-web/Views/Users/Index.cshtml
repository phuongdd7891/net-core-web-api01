@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script>

        $(document).ready(function () {
            $("#example").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                "pageLength": 15,
                "lengthMenu": [15, 30, 50],
                "ajax": function (data, callback, settings) {
                    $.ajax({
                        url: "@Url.Action("getUsers")",
                        data: {
                            skip: data.start,
                            limit: data.length
                        },
                        success: (res) => {
                            callback({
                                data: res.list,
                                recordsTotal: res.total,
                                recordsFiltered: res.total
                            });
                        },
                        error: (err) => {
                            alert(`[${err.status}] ${err.statusText}`);
                        }
                    });
                },
                // "columnDefs": [{
                //     "targets": [0],
                //     "visible": false,
                //     "searchable": false
                // }],
                "columns": [
                    { "data": "id", "name": "CustomerID", "autoWidth": true },
                    { "data": "username", "name": "Name", "autoWidth": true },
                    { "data": "email", "name": "Address", "autoWidth": true },
                    { "data": "roles", "name": "Country", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/DemoGrid/Edit/' + full.id + '">Edit</a>'; }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=onLockUser('" + row.username + "'); ><i class='bi bi-lock'></i> Lock</a>";
                        }
                    },
                ]

            });
        });

        function onLockUser(username) {
            if (confirm("Are you sure you want to lock user " + username + "?")) {
                LockUser(username);
            } else {
                return false;
            }
        }

        function LockUser(username) {
            var url = '@Url.Action("LockUser", "Users")';
            url = url.replace("%u%", username);
            $.post(url, { username: username, locked: true }, function (data) {
                if (!data) {
                    oTable = $('#example').DataTable();
                    oTable.draw();
                } else {
                    alert(data);
                }
            });
        }

    </script>
}
