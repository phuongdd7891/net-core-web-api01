@model AdminWeb.Models.Response.UserRolesResponse[]

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Display</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var role = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>
                    <b class="text-decoration-underline link-primary cursor-pointer" onclick="editRole(@Newtonsoft.Json.JsonConvert.SerializeObject(role))">
                        @role.Name
                    </b>
                </td>
                <td>@role.DisplayName</td>
                <td>@string.Join(", ", role.Actions)</td>
            </tr>
        }
    </tbody>
</table>